<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ExoButton">
        <item name="android:background">@null</item>
        <item name="android:layout_width">@dimen/exo_media_button_width</item>
        <item name="android:layout_height">@dimen/exo_media_button_height</item>
    </style>

    <style name="ExoButton.Play">
        <item name="android:src">@drawable/ic_exo_play</item>
    </style>

    <style name="ExoButton.Pause">
        <item name="android:src">@drawable/ic_exo_pause</item>
    </style>

    <style name="ExoButton.Rewind">
        <item name="android:src">@drawable/ic_exo_rewind</item>
    </style>

    <style name="ExoButton.Forward">
        <item name="android:src">@drawable/ic_exo_forward</item>
    </style>

</resources>
