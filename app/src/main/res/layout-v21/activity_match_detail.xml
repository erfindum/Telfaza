<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipeRefresh"
    >

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/listBackground"
    >

    <android.support.constraint.Guideline
        android:id="@+id/v_guide15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"
         />

    <android.support.constraint.Guideline
        android:id="@+id/v_guide40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"
        />

    <android.support.constraint.Guideline
        android:id="@+id/v_guide80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"
        />

    <View
        android:id="@+id/back1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/img_main_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/v_guide40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/btn4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="@+id/card1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:padding="7dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@null"
         />

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="7dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toTopOf="@+id/v_guide80"
        app:layout_constraintTop_toTopOf="@+id/v_guide15"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <android.support.constraint.Guideline
                android:id="@+id/v_guide20_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.2"
                tools:layout_editor_absoluteY="110dp"
                tools:layout_editor_absoluteX="180dp" />
            <android.support.constraint.Guideline
                android:id="@+id/v_guide45_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.45"
                tools:layout_editor_absoluteY="110dp"
                tools:layout_editor_absoluteX="180dp" />
            <android.support.constraint.Guideline
                android:id="@+id/v_guide60_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6"
                tools:layout_editor_absoluteY="110dp"
                tools:layout_editor_absoluteX="180dp" />

            <android.support.constraint.Guideline
                android:id="@+id/v_guide70_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.75"
                tools:layout_editor_absoluteY="110dp"
                tools:layout_editor_absoluteX="180dp" />

            <android.support.constraint.Guideline
                android:id="@+id/h_guide35_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.35"
                android:orientation="vertical"
                tools:layout_editor_absoluteY="110dp"
                tools:layout_editor_absoluteX="180dp" />

            <android.support.constraint.Guideline
                android:id="@+id/h_guide65_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.65"
                tools:layout_editor_absoluteY="110dp"
                tools:layout_editor_absoluteX="180dp" />

            <android.support.constraint.Guideline
                android:id="@+id/h_guide50_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"
                tools:layout_editor_absoluteY="110dp"
                tools:layout_editor_absoluteX="180dp" />


            <com.ahmedelouha.telfaza.customviews.CustomFontTextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/h_guide35_1"
                app:layout_constraintEnd_toStartOf="@id/h_guide65_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/v_guide20_1"
                android:textAlignment="center"
                android:text="League name"
                android:textColor="@color/matchItemText"
                android:textSize="20sp"
                app:font="@string/aljazeeraFont"
                tools:layout_editor_absoluteX="180dp" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:layout_constraintStart_toEndOf="@+id/txt1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/v_guide20_1"
                android:layout_marginStart="15dp"/>

            <ImageView
                android:id="@+id/img2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/h_guide35_1"
                app:layout_constraintBottom_toTopOf="@+id/v_guide45_1"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="@+id/v_guide20_1"
                tools:layout_editor_absoluteX="145dp" />

            <View
                android:id="@+id/divider1"
                android:layout_width="1dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@id/h_guide35_1"
                app:layout_constraintBottom_toTopOf="@+id/v_guide45_1"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="@color/colorPrimaryLight"
                tools:layout_editor_absoluteX="180dp"
                app:layout_constraintTop_toTopOf="@+id/v_guide20_1" />

            <com.ahmedelouha.telfaza.customviews.CustomFontTextView
                android:id="@+id/txt2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/divider1"
                app:layout_constraintEnd_toStartOf="@id/h_guide65_1"
                app:layout_constraintBottom_toTopOf="@+id/v_guide45_1"
                android:textAlignment="center"
                android:text="0 - 0"
                android:textSize="20sp"
                app:font="@string/dinDisplayBold"
                android:textColor="@color/matchItemText"
                app:layout_constraintTop_toTopOf="@+id/v_guide20_1"
                tools:layout_editor_absoluteX="181dp" />

            <View
                android:id="@+id/divider2"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toStartOf="@id/h_guide65_1"
                app:layout_constraintBottom_toTopOf="@+id/v_guide45_1"
                android:background="@color/colorPrimaryLight"
                tools:layout_editor_absoluteX="179dp"
                app:layout_constraintTop_toTopOf="@+id/v_guide20_1" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintStart_toEndOf="@id/h_guide65_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/v_guide45_1"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="@+id/v_guide20_1"
                tools:layout_editor_absoluteX="145dp" />

            <com.ahmedelouha.telfaza.customviews.CustomFontTextView
                android:id="@+id/txt3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/v_guide60_1"
                app:layout_constraintStart_toEndOf="@id/divider1"
                app:layout_constraintEnd_toStartOf="@id/h_guide65_1"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/img_status"
                android:text="- NA -"
                app:font="@string/dinDisplayNormal"
                app:layout_constraintTop_toTopOf="@+id/v_guide45_1"
                tools:layout_editor_absoluteX="181dp" />

            <com.ahmedelouha.telfaza.customviews.CustomFontTextView
                android:id="@+id/txt4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/h_guide35_1"
                app:layout_constraintBottom_toTopOf="@+id/v_guide70_1"
                app:font="@string/aljazeeraFont"
                android:textSize="17sp"
                android:text="team one"
                android:textAlignment="center"
                android:textColor="@color/matchItemText"
                app:layout_constraintTop_toTopOf="@+id/v_guide60_1"
                tools:layout_editor_absoluteX="180dp" />

            <com.ahmedelouha.telfaza.customviews.CustomFontTextView
                android:id="@+id/txt5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/h_guide35_1"
                app:layout_constraintEnd_toStartOf="@id/h_guide65_1"
                app:layout_constraintBottom_toTopOf="@+id/v_guide70_1"
                app:font="@string/aljazeeraFont"
                android:textSize="17sp"
                android:textColor="@color/matchItemText"
                android:text="Channel"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="@+id/v_guide60_1"
                tools:layout_editor_absoluteX="180dp" />

            <com.ahmedelouha.telfaza.customviews.CustomFontTextView
                android:id="@+id/txt6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/h_guide65_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/v_guide70_1"
                app:font="@string/aljazeeraFont"
                android:textSize="17sp"
                android:text="team two"
                android:textAlignment="center"
                android:textColor="@color/matchItemText"
                tools:layout_editor_absoluteX="180dp"
                app:layout_constraintTop_toTopOf="@+id/v_guide60_1" />
            <View
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/colorPrimaryLight"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintTop_toTopOf="@+id/v_guide70_1" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/h_guide50_1"
                app:layout_constraintTop_toBottomOf="@+id/divider3"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/img_status"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:text="Stream Link 1"
                tools:layout_editor_absoluteX="180dp"
                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/h_guide50_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider3"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/img_status"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:text="Stream Link 2"
                tools:layout_editor_absoluteX="180dp"
                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/h_guide35_1"
                app:layout_constraintEnd_toStartOf="@id/h_guide65_1"
                app:layout_constraintTop_toBottomOf="@+id/divider3"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/img_status"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:text="Goal Link"
                android:visibility="gone"
                tools:layout_editor_absoluteX="180dp"
                android:textAllCaps="false"
                />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.SwipeRefreshLayout>